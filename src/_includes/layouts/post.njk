---
layout: default
---

<article class="post-container max-w-4xl mx-auto px-6 py-12">

  {% if featured_image %}
    <img src="{{ featured_image | url }}" alt="{{ title }}" class="rounded-md w-full object-cover mb-8" loading="lazy">
  {% endif %}

  <!-- Post Header -->
  <header class="mb-8">
    <h1 class="text-4xl font-extrabold leading-tight mb-4">{{ title }}</h1>
    <div class="text-sm text-gray-500">
      <time datetime="{{ page.date }}">{{ page.date | readableDate }}</time>
      {% if author %} Â· By <span class="font-medium text-gray-700">{{ author }}</span>{% endif %}
    </div>
  </header>

  <!-- Share Buttons -->
  <div class="flex flex-wrap items-center space-x-4 text-sm text-gray-600 mb-10">
    <span class="font-semibold text-gray-800">Share this:</span>
    <a href="https://twitter.com/intent/tweet?url={{ page.url }}&text={{ title }}" class="hover:text-blue-500" target="_blank">Twitter</a>
    <a href="https://www.linkedin.com/shareArticle?mini=true&url={{ page.url }}&title={{ title }}" class="hover:text-blue-600" target="_blank">LinkedIn</a>
    <a href="mailto:?subject={{ title }}&body=Check out this article: {{ page.url }}" class="hover:text-red-600">Email</a>
  </div>

  <!-- Table of Contents Placeholder -->
  <nav id="toc" class="mb-12 border-l-4 border-blue-100 pl-4 text-sm text-gray-700 bg-blue-50 rounded-md py-4 px-2">
    <p class="font-bold mb-2 text-gray-800">In this article</p>
    <ul class="space-y-1">
      <li><a href="#section1" class="hover:underline text-blue-600">Understanding GKE Billing</a></li>
      <li><a href="#section2" class="hover:underline text-blue-600">Breaking Down Cost Categories</a></li>
      <li><a href="#section3" class="hover:underline text-blue-600">Tools For GKE Cost Allocation</a></li>
    </ul>
  </nav>

  <!-- Main Post Body -->
  <div class="prose lg:prose-lg prose-blue max-w-none">
    {{ content | safe }}
  </div>

  <!-- Related Posts -->
  {% if relatedPosts %}
  <section class="mt-16">
    <h2 class="text-2xl font-bold mb-6">Keep Reading</h2>
    <div class="grid md:grid-cols-2 gap-6">
      {% for post in relatedPosts %}
        <a href="{{ post.url }}" class="block p-4 border rounded-md hover:shadow-sm transition">
          <h3 class="font-semibold text-lg">{{ post.data.title }}</h3>
          <p class="text-sm text-gray-500">{{ post.data.description || post.templateContent | striptags | truncate(100) }}</p>
        </a>
      {% endfor %}
    </div>
  </section>
  {% endif %}

  <!-- Author Bio -->
  <section class="mt-20 border-t pt-10 flex items-center space-x-6">
    <img src="/assets/img/Rakshit Soral.png" alt="Rakshit Soral portrait" class="w-20 h-20 rounded-full object-cover" loading="lazy">
    <div>
      <p class="font-semibold text-gray-800">Rakshit Soral</p>
      <p class="text-sm text-gray-600 mt-1">I write about digital marketing strategy, technology, and web experimentation. I also enjoy music, anime, and open-source tinkering.</p>
    </div>
  </section>

</article>
