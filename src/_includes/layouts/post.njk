                    </svg>
                </a>
                
                <!-- Copy Link -->
                <button id="copy-link-top" class="p-2 rounded-full transition-all duration-300 bg-gray-700 hover:bg-gray-800" aria-label="Copy link">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Spacing between share bar and featured image -->
    <div class="w-full h-8"></div>

    {% if featured_image %}
    <img src="{{ featured_image | url }}" loading="lazy" alt="{{ title }}" {% if featured_image_classes %}class="{{ featured_image_classes }}"{% endif %}>
    {% endif %}

    <div class="writing">

        <header class="py-12 text-center">
            <h1 class="mb-3 text-4xl font-bold">{{ title }}</h1>
            <time class="text-gray-400 text-sm">{{ page.date | readableDate }}</time>

            <!-- Remove outdated icons later if needed -->
            <div id="share-buttons" class="mt-4">
              <!-- Share buttons code kept as-is -->
            </div>
        </header>

        <!-- Blog Content -->
        {{ content | safe }}

    </div>

    <!-- Author Section -->
    <section class="work-section work-section--misc max-w-4xl p-16 mt-24 flex items-start self-center relative sm:p-8 sm:mt-12  sm:flex-col-reverse">
        <div>
            <p>I enjoy <a href="/blog" class="link-misc">writing</a> about things I learn & I know,
            building scalable Digital Marketing campaigns, and learning a bit of
            <a href="https://github.com/rakshitsoral" class="link-misc">web development</a>, side-by-side.</p>

            <p class="mt-6">When not in front of a screen I like to listen music, play guitar,
            read books, and binge-watch anime/ series.</p>
        </div>

        <div class="img relative flex-shrink-0 ml-12 sm:ml-0 sm:mb-8">
            <img src="/assets/img/Rakshit Soral.png" alt="Rakshit Soral portrait"
            loading="lazy" height="275" width="275" class="z-10 relative transform -rotate-2">
        </div>

        <span class="curl3 absolute block bg-no-repeat sm:hidden" aria-hidden="true"></span>
    </section>

</article>

<!-- Light/Dark Mode Toggle (Blog Only) -->
<button id="theme-toggle" class="fixed right-6 top-1/2 -translate-y-1/2 z-50 p-3 rounded-full shadow-lg transition-all duration-300 bg-white hover:bg-gray-100 border border-gray-200" aria-label="Toggle theme">
    <!-- Sun icon - shows in dark mode, click to go light -->
    <svg id="sun-icon" class="w-6 h-6 text-gray-800" fill="currentColor" viewBox="0 0 20 20">
        <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"/>
    </svg>
    <!-- Moon icon - shows in light mode, click to go dark -->
    <svg id="moon-icon" class="w-6 h-6 text-gray-800 hidden" fill="currentColor" viewBox="0 0 20 20">
        <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"/>
    </svg>
</button>

<style>
    /* Smooth transitions */
    body {
        transition: background-color 0.3s ease, color 0.3s ease;
    }
    
    /* Share bar default (dark) */
    #share-bar {
        background-color: #0E091D;
        border-bottom-color: #374151;
    }
    
    #share-bar span {
        color: #d1d5db;
    }
    
    /* Share bar in light mode (white) */
    body.light-mode #share-bar {
        background-color: #ffffff !important;
        border-bottom-color: #e5e7eb !important;
    }
    
    body.light-mode #share-bar span {
        color: #374151 !important;
    }
    
    /* Ensure bio section box corners (curl3 SVG) are visible in light mode */
    body.light-mode .curl3 {
        filter: invert(1) !important;
        opacity: 0.8 !important;
    }
    
    /* If the SVG has fill/stroke attributes, ensure they're visible */
    body.light-mode .work-section--misc::before,
    body.light-mode .work-section--misc::after {
        filter: invert(1) !important;
    }
    
    /* Alternative: if curl3 uses background-image */
    body.light-mode span.curl3 {
        filter: invert(1) brightness(0.8) !important;
    }
    
    /* Light mode styles */
    body.light-mode {
        background-color: #ffffff !important;
        color: #000000 !important;
    }
    
    body.light-mode .writing {
        background-color: #ffffff !important;
        color: #000000 !important;
    }
    
    body.light-mode h1,
    body.light-mode h2,
    body.light-mode h3,
    body.light-mode h4,
    body.light-mode h5,
    body.light-mode h6 {
        color: #000000 !important;
    }
    
    body.light-mode p,
    body.light-mode li,
    body.light-mode span,
    body.light-mode div {
        color: #000000 !important;
    }
    
    body.light-mode a {
        color: #2563eb !important;
    }
    
    body.light-mode a:hover {
        color: #1d4ed8 !important;
    }
    
    body.light-mode .work-section,
    body.light-mode .work-section--misc {
        background-color: #f9fafb !important;
        color: #000000 !important;
    }
    
    body.light-mode time {
        color: #6b7280 !important;
    }
    
    body.light-mode code {
        background-color: #f3f4f6 !important;
        color: #000000 !important;
    }
    
    body.light-mode pre {
        background-color: #f3f4f6 !important;
        color: #000000 !important;
    }
    
    body.light-mode blockquote {
        color: #374151 !important;
        border-left-color: #d1d5db !important;
    }
    
    /* Toggle button in light mode */
    body.light-mode #theme-toggle {
        background-color: #1f2937 !important;
        border-color: #374151 !important;
    }
    
    body.light-mode #theme-toggle:hover {
        background-color: #111827 !important;
    }
    
    body.light-mode #theme-toggle svg {
        color: #ffffff !important;
    }
</style>

<script>
    (function() {
        // Theme Toggle Logic
        const themeToggle = document.getElementById('theme-toggle');
        const sunIcon = document.getElementById('sun-icon');
        const moonIcon = document.getElementById('moon-icon');
        
        const savedTheme = localStorage.getItem('blog-theme');
        
        if (savedTheme === 'light') {
            document.body.classList.add('light-mode');
            sunIcon.classList.add('hidden');
            moonIcon.classList.remove('hidden');
        } else {
            document.body.classList.remove('light-mode');
            sunIcon.classList.remove('hidden');
            moonIcon.classList.add('hidden');
        }
        
        themeToggle.addEventListener('click', function(e) {
            e.preventDefault();
            const isLightMode = document.body.classList.contains('light-mode');
            
            if (isLightMode) {
                document.body.classList.remove('light-mode');
                localStorage.setItem('blog-theme', 'dark');
                sunIcon.classList.remove('hidden');
                moonIcon.classList.add('hidden');
            } else {
                document.body.classList.add('light-mode');
                localStorage.setItem('blog-theme', 'light');
                sunIcon.classList.add('hidden');
                moonIcon.classList.remove('hidden');
            }
        });
        
        // Social Share Logic
        const pageUrl = encodeURIComponent(window.location.href);
        const pageTitle = encodeURIComponent(document.title);
        
        // Set share URLs
        document.getElementById('twitter-share-top').href = `https://twitter.com/intent/tweet?url=${pageUrl}&text=${pageTitle}`;
        document.getElementById('facebook-share-top').href = `https://www.facebook.com/sharer/sharer.php?u=${pageUrl}`;
        document.getElementById('linkedin-share-top').href = `https://www.linkedin.com/sharing/share-offsite/?url=${pageUrl}`;
        document.getElementById('whatsapp-share-top').href = `https://wa.me/?text=${pageTitle}%20${pageUrl}`;
        
        // Copy link functionality
        document.getElementById('copy-link-top').addEventListener('click', function(e) {
            e.preventDefault();
            navigator.clipboard.writeText(window.location.href).then(function() {
                const originalHTML = e.currentTarget.innerHTML;
                e.currentTarget.innerHTML = '<svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>';
                setTimeout(function() {
                    e.currentTarget.innerHTML = originalHTML;
                }, 2000);
            });
        });
    })();
</script>