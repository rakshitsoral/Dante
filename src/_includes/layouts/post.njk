---
layout: default
---

<article class="flex flex-col items-center">
    <!-- Sticky Social Share Bar (Above Featured Image Area) -->
    <div id="share-bar" class="sticky top-0 z-50 w-full bg-gray-900 border-b border-gray-700 shadow-sm py-4 transition-colors duration-300">
        <div class="max-w-4xl mx-auto px-6 flex items-center justify-center gap-3">
            <span class="text-sm font-medium text-gray-300">Share:</span>
            <div class="flex gap-2">
                <!-- Twitter/X -->
                <a href="#" id="twitter-share-top" class="p-2 rounded-full transition-all duration-300 bg-black hover:bg-gray-800" aria-label="Share on Twitter" target="_blank" rel="noopener">
