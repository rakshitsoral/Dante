---
layout: default
title: Blog
pagination:
    data: collections.posts
    size: 1000
    alias: posts
---

<section class="max-w-3xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-2">{{ site.title }}</h1>
  <p class="text-lg text-gray-600 mb-6">{{ site.description }}</p>
  <p class="text-sm text-gray-400 mb-8">URL: {{ site.url }}</p>

  {% set latest_post = collections.posts | sort(attribute='date', reverse=true) | first %}
  <p class="text-sm text-gray-500 mb-4">Last Updated: {{ latest_post.date | date("yyyy-MM-dd") }}</p>

  <p class="text-sm text-gray-500 mb-8">Author: {{ site.author.name }}</p>

  <div class="grid md:grid-cols-2 gap-6">
    {% for post in collections.posts | sort(attribute='date', reverse=true) %}
      <article class="border border-gray-200 rounded-lg p-4 hover:shadow transition">
        <h2 class="text-xl font-semibold mb-1">
          <a href="{{ post.url }}" class="text-blue-600 hover:underline">
            {{ post.data.title }}
          </a>
        </h2>
        <p class="text-sm text-gray-500 mb-2">
          Updated: {{ post.date | date("yyyy-MM-dd") }}
        </p>
        <p class="text-sm text-gray-700">
          {{ post.templateContent | striptags | truncate(150, true, '...') }}
        </p>
        <p class="mt-2">
          <a href="{{ post.url }}" class="text-blue-500 text-sm hover:underline">Read more â†’</a>
        </p>
      </article>
    {% endfor %}
  </div>
</section>