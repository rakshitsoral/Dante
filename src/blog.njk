
---
layout: default
title: Blog
pagination:
    data: collections.posts
    size: 1000
    alias: posts
---

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-3xl font-bold mb-8">{{ title }}</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for post in collections.posts %}
            <div class="bg-white shadow-md rounded-lg overflow-hidden">
                {% if post.data.featured_image %}
                    <img src="{{ post.data.featured_image | url }}" alt="{{ post.data.title }}" class="w-full h-48 object-cover" loading="lazy">
                {% else %}
                    <div class="w-full h-48 bg-gray-200"></div>
                {% endif %}
                <div class="p-6">
                    <h2 class="text-xl font-semibold mb-2">
                        <a href="{{ post.url }}" class="text-blue-600 hover:text-blue-800">{{ post.data.title }}</a>
                    </h2>
                    <p class="text-gray-600 mb-4">
                        {% if post.data.excerpt %}
                            {{ post.data.excerpt | safe }}
                        {% else %}
                            {{ post.content | truncate(100) | safe }}
                        {% endif %}
                    </p>
                    <time class="text-sm text-gray-500">{{ post.date | readableDate }}</time>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
