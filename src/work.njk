<style>
    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }
   
    .animate-fade-in { animation: fadeInUp 0.8s ease-out forwards; }
    .portfolio-item {
        animation: fadeInUp 0.6s ease-out forwards;
        opacity: 0;
        width: 100%;
        min-width: 0;
    }
    .portfolio-item.hide { display: none; }
    .portfolio-item:hover .item-image { transform: scale(1.05); }
    .item-image { transition: transform 0.3s ease; }
    .search-input:focus { box-shadow: 0 0 0 3px rgba(236, 72, 153, 0.2); }
   
    /* Grid Layout */
    #portfolioGrid {
        display: grid !important;
        grid-template-columns: repeat(1, minmax(0, 1fr));
        width: 100%;  /* Force full width */
        max-width: 100%;
    }
    @media (min-width: 768px) {
        #portfolioGrid {
            grid-template-columns: repeat(2, minmax(0, 1fr));
        }
    }
    @media (min-width: 1024px) {
        #portfolioGrid {
            grid-template-columns: repeat(3, minmax(0, 1fr));
        }
    }

    /* Mobile-First Full-Width Fixes */
    html, body {
        width: 100%;
        margin: 0;
        padding: 0;
        overflow-x: hidden;  /* Prevent horizontal scroll */
    }

    section {
        width: 100%;  /* Ensure sections don't constrain */
    }

    /* Reduce padding on very small screens */
    @media (max-width: 640px) {
        .max-w-6xl {
            padding-left: 1rem;
            padding-right: 1rem;
        }
        .filter-btn {
            padding-left: 1rem;
            padding-right: 1rem;
            font-size: 0.875rem;  /* Smaller text/buttons on mobile */
        }
    }
   
    /* Filter Button Styles */
    .filter-btn {
        background: rgba(128, 128, 128, 0.1);
        color: inherit;
        border: 1px solid rgba(128, 128, 128, 0.2);
        cursor: pointer;
        transition: all 0.3s ease;
    }
    .filter-btn:hover {
        transform: translateY(-2px);
        background: rgba(236, 72, 153, 0.2);
        border-color: #EC4899;
        color: #EC4899;
    }
    .filter-btn.active {
        background: #EC4899 !important;
        color: white !important;
        border-color: #EC4899 !important;
    }
    .filter-btn.active:hover {
        background: rgba(236, 72, 153, 0.9) !important;
        border-color: #EC4899 !important;
    }
    /* Category-specific hover colors */
    .filter-btn[data-filter="casestudies"]:not(.active):hover {
        background: rgba(139, 92, 246, 0.2);
        border-color: #8B5CF6;
        color: #8B5CF6;
    }
   
    .filter-btn[data-filter="content"]:not(.active):hover {
        background: rgba(191, 135, 11, 0.2);
        border-color: #BF870B;
        color: #BF870B;
    }
    .filter-btn[data-filter="website"]:not(.active):hover,
    .filter-btn[data-filter="videos"]:not(.active):hover {
        background: rgba(96, 165, 250, 0.2);
        border-color: #60A5FA;
        color: #60A5FA;
    }
    .filter-btn[data-filter="linkedin"]:not(.active):hover {
        background: rgba(236, 72, 153, 0.2);
        border-color: #EC4899;
        color: #EC4899;
    }
    .filter-btn[data-filter="google"]:not(.active):hover {
        background: rgba(65, 158, 84, 0.2);
        border-color: #419E54;
        color: #419E54;
    }
    /* Case Studies Section - Full Width on Mobile */
    #caseStudiesSection {
        width: 100%;
        max-width: 100%;
        margin: 0;
        padding: 0;
    }
</style>

