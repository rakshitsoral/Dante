<script>
    let projects = [];

    try {
        projects = {{ portfolioData.projects | dump | safe }};
        console.log('‚úÖ Loaded', projects.length, 'projects');
    } catch(e) {
        console.log('‚ö†Ô∏è No portfolioData found');
    }

    const portfolioGrid = document.getElementById('portfolioGrid');
    const caseStudiesSection = document.getElementById('caseStudiesSection');
    const filterBtns = document.querySelectorAll('.filter-btn');
    const resultsCount = document.getElementById('resultsCount');
    const noResults = document.getElementById('noResults');
    const lightbox = document.getElementById('lightbox');
    const lightboxDisplay = document.getElementById('lightboxDisplay');
    const lightboxCounter = document.getElementById('lightboxCounter');
    const lightboxInfo = document.getElementById('lightboxInfo');
    const lightboxTitle = document.getElementById('lightboxTitle');
    const lightboxDesc = document.getElementById('lightboxDesc');

    let currentFilter = 'casestudies';
    let currentLightboxIndex = 0;
    let galleryItems = [];

    // Check if URL is a video file
    function isVideoFile(url) {
        if (!url) return false;
        return /\.(mp4|webm|ogg|mov)$/i.test(url);
    }

    // Check if URL is an image file
    function isImageFile(url) {
        if (!url) return false;
        return /\.(png|jpg|jpeg|gif|webp|svg)$/i.test(url);
    }

    // Check if project has displayable media (image or video)
    function hasMedia(project) {
        return !!(project.image || (project.url && (isImageFile(project.url) || isVideoFile(project.url))));
    }

    // Check if project should open in gallery
    function canOpenInGallery(project) {
        // Only linkedin and google ads with images OR local video files open in gallery
        if (project.category !== 'linkedin' && project.category !== 'google') return false;
        return project.image || (project.url && isVideoFile(project.url));
    }

    // Check if project has an external link (not media)
    function hasExternalLink(project) {
        if (!project.url) return false;
        // External links are URLs that are NOT image/video files
        return !isImageFile(project.url) && !isVideoFile(project.url);
    }

    function init() {
        portfolioGrid.style.display = 'none';
        caseStudiesSection.style.display = 'block';
        noResults.style.display = 'none';
        setupEventListeners();
    }

    function renderPortfolio() {
        if (currentFilter === 'casestudies') {
            portfolioGrid.style.display = 'none';
            caseStudiesSection.style.display = 'block';
            noResults.style.display = 'none';
            resultsCount.textContent = 'Case Studies';
            return;
        }

        portfolioGrid.style.display = 'grid';
        caseStudiesSection.style.display = 'none';
        portfolioGrid.innerHTML = '';

        const filtered = projects.filter(p => p.category === currentFilter);
        // Gallery items: linkedin/google with image or local video
        galleryItems = filtered.filter(p => canOpenInGallery(p));
        
        resultsCount.textContent = filtered.length + ' projects';
        
        if (filtered.length === 0) {
            noResults.style.display = 'block';
            portfolioGrid.style.display = 'none';
            return;
        }
        noResults.style.display = 'none';

        filtered.forEach((project, index) => {
            const item = document.createElement('div');
            const opensGallery = canOpenInGallery(project);
            const hasLink = hasExternalLink(project);
            const isVideo = project.url && isVideoFile(project.url);
            
            item.className = `portfolio-item bg-white/5 rounded-2xl overflow-hidden border border-white/10 hover:border-white/20 transition-all duration-300 ${opensGallery ? 'clickable' : ''}`;
            item.style.animationDelay = `${index * 0.1}s`;

            if (opensGallery) {
                const galleryIndex = galleryItems.findIndex(g => g.id === project.id);
                item.addEventListener('click', () => openLightbox(galleryIndex));
            }

            // Determine what media to show
            const showImage = !!project.image;
            const showVideoThumb = isVideo && !project.image;

            item.innerHTML = `
                <div class="item-image" style="background-color: ${project.color}20;">
                    ${showImage 
                        ? `<img src="${project.image}" alt="${project.title}" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                           <div class="icon-fallback" style="display: none; width: 100%; height: 100%; align-items: center; justify-content: center;">${project.icon}</div>`
                        : showVideoThumb
                            ? `<video src="${project.url}" muted preload="metadata" style="pointer-events: none;"></video>
                               <div class="play-badge"><svg width="24" height="24" fill="white" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg></div>`
                            : `<div class="icon-fallback">${project.icon}</div>`
                    }
                    <div class="absolute top-3 right-3 backdrop-blur-sm px-3 py-1 rounded-full border border-white/20 bg-black/30">
                        <span class="text-xs font-semibold text-white">${project.company}</span>
                    </div>
                    ${hasLink ? `<div class="external-link-badge">
                        <svg width="12" height="12" fill="none" stroke="currentColor" stroke-width="2"><path d="M7 2h5v5M12 2L6 8"/></svg>
                        Open
                    </div>` : ''}
                    ${isVideo && !hasLink ? `<div class="external-link-badge">‚ñ∂ Video</div>` : ''}
                </div>
                <div class="p-5">
                    <div class="flex items-center gap-2 mb-3">
                        <span class="px-3 py-1 text-xs font-bold rounded-full uppercase tracking-wide" style="background: ${project.color}20; color: ${project.color}; border: 1px solid ${project.color}30;">
                            ${project.category}
                        </span>
                    </div>
                    <h3 class="text-lg font-bold mb-2 line-clamp-2">${project.title}</h3>
                    <p class="text-sm opacity-60 mb-4 line-clamp-2">${project.description}</p>
                    <div class="flex items-center justify-between">
                        <div class="flex items-center text-sm font-semibold" style="color: #EC4899;">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/></svg>
                            ${project.metrics}
                        </div>
                        ${hasLink 
                            ? `<a href="${project.url}" target="_blank" rel="noopener noreferrer" class="flex items-center text-xs opacity-60 hover:opacity-100 transition-opacity" onclick="event.stopPropagation();">
                                Open <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
                               </a>`
                            : opensGallery 
                                ? `<span class="text-xs opacity-60">View ‚Üí</span>` 
                                : ''
                        }
                    </div>
                </div>
            `;
            portfolioGrid.appendChild(item);
        });
    }

    function openLightbox(index) {
        if (galleryItems.length === 0 || index < 0) return;
        currentLightboxIndex = index;
        showLightboxItem();
        lightbox.classList.add('active');
        document.body.style.overflow = 'hidden';
    }

    function closeLightbox() {
        // Pause any playing videos
        const video = lightboxDisplay.querySelector('video');
        if (video) video.pause();
        
        lightbox.classList.remove('active');
        document.body.style.overflow = '';
    }

    function showLightboxItem() {
        const item = galleryItems[currentLightboxIndex];
        if (!item) return;
        
        lightboxCounter.textContent = `${currentLightboxIndex + 1} / ${galleryItems.length}`;
        lightboxTitle.textContent = item.title;
        lightboxDesc.textContent = item.company + (item.metrics ? ' ‚Ä¢ ' + item.metrics : '');
        lightboxInfo.style.display = 'block';
        
        // Show image or video
        if (item.image) {
            lightboxDisplay.innerHTML = `
                <div class="lightbox-image-container">
                    <img src="${item.image}" alt="${item.title}">
                </div>
            `;
        } else if (item.url && isVideoFile(item.url)) {
            lightboxDisplay.innerHTML = `
                <div class="lightbox-video-container">
                    <video src="${item.url}" controls autoplay></video>
                </div>
            `;
        }
    }

    function nextLightboxItem() {
        if (galleryItems.length === 0) return;
        // Pause current video before switching
        const video = lightboxDisplay.querySelector('video');
        if (video) video.pause();
        
        currentLightboxIndex = (currentLightboxIndex + 1) % galleryItems.length;
        showLightboxItem();
    }

    function prevLightboxItem() {
        if (galleryItems.length === 0) return;
        const video = lightboxDisplay.querySelector('video');
        if (video) video.pause();
        
        currentLightboxIndex = (currentLightboxIndex - 1 + galleryItems.length) % galleryItems.length;
        showLightboxItem();
    }

    function setupEventListeners() {
        filterBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                filterBtns.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                currentFilter = btn.dataset.filter;
                renderPortfolio();
            });
        });

        document.getElementById('lightboxClose').addEventListener('click', closeLightbox);
        document.getElementById('lightboxNext').addEventListener('click', nextLightboxItem);
        document.getElementById('lightboxPrev').addEventListener('click', prevLightboxItem);
        lightbox.addEventListener('click', e => { if (e.target === lightbox) closeLightbox(); });

        document.addEventListener('keydown', e => {
            if (!lightbox.classList.contains('active')) return;
            if (e.key === 'Escape') closeLightbox();
            if (e.key === 'ArrowRight') nextLightboxItem();
            if (e.key === 'ArrowLeft') prevLightboxItem();
        });

        let touchStartX = 0;
        lightbox.addEventListener('touchstart', e => { touchStartX = e.changedTouches[0].screenX; });
        lightbox.addEventListener('touchend', e => {
            const diff = touchStartX - e.changedTouches[0].screenX;
            if (Math.abs(diff) > 50) diff > 0 ? nextLightboxItem() : prevLightboxItem();
        });
    }

    init();
</script>
