<style>
    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }
   
    .animate-fade-in { animation: fadeInUp 0.8s ease-out forwards; }
    
    .portfolio-item {
        animation: fadeInUp 0.6s ease-out forwards;
        opacity: 0;
        width: 100%;
        min-width: 0;
    }
    .portfolio-item.clickable { cursor: pointer; }
    .portfolio-item.clickable:hover .item-image img { transform: scale(1.05); }
    .portfolio-item .item-image img { transition: transform 0.3s ease; }
    
    #portfolioGrid {
        display: grid !important;
        grid-template-columns: repeat(1, minmax(0, 1fr));
        width: 100%;
        max-width: 100%;
        gap: 1.5rem;
    }
    @media (min-width: 768px) { #portfolioGrid { grid-template-columns: repeat(2, minmax(0, 1fr)); gap: 2rem; } }
    @media (min-width: 1024px) { #portfolioGrid { grid-template-columns: repeat(3, minmax(0, 1fr)); } }

    html, body { width: 100%; margin: 0; padding: 0; overflow-x: hidden; }
    section { width: 100%; }

    @media (max-width: 640px) {
        .max-w-6xl { padding-left: 1rem; padding-right: 1rem; }
        .filter-btn { padding-left: 1rem; padding-right: 1rem; font-size: 0.875rem; }
    }
   
    .filter-btn {
        background: inherit;
        color: inherit;
        border: 1px solid rgba(128, 128, 128, 0.2);
        cursor: pointer;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
    }
    .filter-btn:hover {
        transform: translateY(-2px);
        background: rgba(236, 72, 153, 0.2);
        border-color: #EC4899;
        color: #EC4899;
    }
    .filter-btn.active {
        background: #EC4899 !important;
        color: white !important;
        border-color: #EC4899 !important;
    }
    
    .filter-btn[data-filter="casestudies"]:not(.active):hover { background: rgba(139, 92, 246, 0.2); border-color: #8B5CF6; color: #8B5CF6; }
    .filter-btn[data-filter="content"]:not(.active):hover { background: rgba(191, 135, 11, 0.2); border-color: #BF870B; color: #BF870B; }
    .filter-btn[data-filter="google"]:not(.active):hover { background: rgba(65, 158, 84, 0.2); border-color: #419E54; color: #419E54; }
    .filter-btn[data-filter="linkedin"]:not(.active):hover { background: rgba(96, 165, 250, 0.2); border-color: #60A5FA; color: #60A5FA; }
    .filter-btn[data-filter="videos"]:not(.active):hover { background: rgba(139, 92, 246, 0.2); border-color: #8B5CF6; color: #8B5CF6; }
    .filter-btn[data-filter="website"]:not(.active):hover { background: rgba(96, 165, 250, 0.2); border-color: #60A5FA; color: #60A5FA; }

    #caseStudiesSection { width: 100%; max-width: 100%; margin: 0; padding: 0; }

    .lightbox-overlay {
        position: fixed; top: 0; left: 0; width: 100vw; height: 100vh;
        background: rgba(0, 0, 0, 0.95); backdrop-filter: blur(10px);
        z-index: 9999; display: none; opacity: 0; transition: opacity 0.3s ease;
    }
    .lightbox-overlay.active { display: flex; opacity: 1; }
    .lightbox-content {
        position: relative; width: 100%; height: 100%;
        display: flex; align-items: center; justify-content: center; padding: 2rem;
    }
    .lightbox-image-container { max-width: 90%; max-height: 85vh; position: relative; }
    .lightbox-image-container img {
        max-width: 100%; max-height: 85vh; object-fit: contain;
        border-radius: 8px; box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    }
    .lightbox-video-container { max-width: 90%; max-height: 85vh; position: relative; }
    .lightbox-video-container video {
        max-width: 100%; max-height: 85vh; border-radius: 8px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    }
    .lightbox-nav {
        position: absolute; top: 50%; transform: translateY(-50%);
        background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2); color: white;
        width: 50px; height: 50px; border-radius: 50%;
        display: flex; align-items: center; justify-content: center;
        cursor: pointer; transition: all 0.3s ease; z-index: 10001;
    }
    .lightbox-nav:hover { background: rgba(236, 72, 153, 0.3); border-color: #EC4899; transform: translateY(-50%) scale(1.1); }
    .lightbox-nav.prev { left: 2rem; }
    .lightbox-nav.next { right: 2rem; }
    .lightbox-close {
        position: absolute; top: 2rem; right: 2rem;
        background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2); color: white;
        width: 50px; height: 50px; border-radius: 50%;
        display: flex; align-items: center; justify-content: center;
        cursor: pointer; transition: all 0.3s ease; z-index: 10001;
    }
    .lightbox-close:hover { background: rgba(185, 28, 28, 0.3); border-color: #B91C1C; transform: scale(1.1); }
    .lightbox-counter {
        position: absolute; bottom: 2rem; left: 50%; transform: translateX(-50%);
        background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2); color: white;
        padding: 0.5rem 1.5rem; border-radius: 9999px; font-weight: 600; font-size: 0.875rem;
    }
    .lightbox-info {
        position: absolute; bottom: 5rem; left: 2rem; right: 2rem;
        background: rgba(0, 0, 0, 0.7); backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 12px;
        padding: 1rem 1.5rem; color: white; text-align: center;
        max-width: 600px; margin: 0 auto;
    }
    .lightbox-info h3 { font-size: 1.125rem; font-weight: 600; margin-bottom: 0.25rem; }
    .lightbox-info p { font-size: 0.875rem; opacity: 0.7; }

    @media (max-width: 768px) {
        .lightbox-nav { width: 40px; height: 40px; }
        .lightbox-nav.prev { left: 1rem; }
        .lightbox-nav.next { right: 1rem; }
        .lightbox-close { top: 1rem; right: 1rem; width: 40px; height: 40px; }
        .lightbox-info { left: 1rem; right: 1rem; bottom: 5rem; }
    }

    .item-image { position: relative; height: 12rem; overflow: hidden; display: flex; align-items: center; justify-content: center; }
    .item-image img, .item-image video { width: 100%; height: 100%; object-fit: cover; }
    .item-image .icon-fallback { font-size: 4rem; opacity: 0.3; }
    .external-link-badge {
        position: absolute; bottom: 0.75rem; right: 0.75rem;
        background: rgba(0, 0, 0, 0.7); backdrop-filter: blur(4px);
        padding: 0.375rem 0.75rem; border-radius: 9999px;
        font-size: 0.75rem; color: white; display: flex; align-items: center; gap: 0.25rem;
    }
    .play-badge {
        position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);
        background: rgba(109, 73, 175, 0.6); backdrop-filter: blur(4px);
        width: 60px; height: 60px; border-radius: 50%;
        display: flex; align-items: center; justify-content: center;
        transition: transform 0.3s ease, background 0.3s ease;
    }
    .portfolio-item:hover .play-badge { background: rgba(236, 72, 153, 0.8); transform: translate(-50%, -50%) scale(1.1); }
</style>

