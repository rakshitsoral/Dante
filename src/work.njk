<script>
    console.log('üîç Portfolio Script Loading...');
   
    // Portfolio data from 11ty - with fallback
    let projects = [];
   
    try {
        projects = {{ portfolioData.projects | dump | safe }};
        console.log('‚úÖ Portfolio data loaded:', projects.length, 'projects');
    } catch(e) {
        console.error('‚ùå Error loading portfolio data:', e);
        console.log('Using fallback empty array');
    }
    // DOM Elements
    const portfolioGrid = document.getElementById('portfolioGrid');
    const caseStudiesSection = document.getElementById('caseStudiesSection');
    const filterBtns = document.querySelectorAll('.filter-btn');
    const searchInput = document.getElementById('searchInput');
    const resultsCount = document.getElementById('resultsCount');
    const noResults = document.getElementById('noResults');
    // State
    let currentFilter = 'casestudies';
    let searchTerm = '';
    // Initialize
    function init() {
        console.log('üöÄ Initializing portfolio...');
       
        // Show case studies by default, hide portfolio grid
        portfolioGrid.style.display = 'none';
        portfolioGrid.style.width = '100%';  // Enforce width
        caseStudiesSection.style.display = 'block';
        noResults.style.display = 'none';
       
        if (projects.length === 0) {
            console.warn('‚ö†Ô∏è No projects found in data');
        }
       
        setupEventListeners();
    }
    // Render portfolio items
    function renderPortfolio() {
        // Handle Case Studies filter separately
        if (currentFilter === 'casestudies') {
            portfolioGrid.style.display = 'none';
            portfolioGrid.innerHTML = ''; // Clear grid content
            caseStudiesSection.style.display = 'block';
            noResults.style.display = 'none';
            resultsCount.textContent = 'Case Studies';
            return;
        }
       
        // For all other filters, hide case studies and show portfolio grid
        portfolioGrid.style.display = 'grid';
        portfolioGrid.style.width = '100%';  // Enforce width
        caseStudiesSection.style.display = 'none';
       
        portfolioGrid.innerHTML = '';
       
        let filteredProjects = projects.filter(project => {
            const matchesFilter = currentFilter === 'all' || project.category === currentFilter;
            const matchesSearch = project.title.toLowerCase().includes(searchTerm.toLowerCase()) ||
                                project.description.toLowerCase().includes(searchTerm.toLowerCase()) ||
                                project.company.toLowerCase().includes(searchTerm.toLowerCase());
            return matchesFilter && matchesSearch;
        });
       
        console.log('üìä Filtered projects:', filteredProjects.length);
       
        // Update results count
        resultsCount.textContent = filteredProjects.length + ' projects';
       
        // Show/hide no results message
        if (filteredProjects.length === 0) {
            noResults.style.display = 'block';
            portfolioGrid.style.display = 'none';
            return;
        } else {
            noResults.style.display = 'none';
            portfolioGrid.style.display = 'grid';
        }
       
        // Render items
        filteredProjects.forEach((project, index) => {
            const item = document.createElement('a');
            // Add href and link attributes
            item.href = project.url || project.link || '#';
            item.target = project.url || project.link ? '_blank' : '_self';
            item.rel = 'noopener noreferrer';
           
            item.className = 'portfolio-item bg-white/5 rounded-2xl overflow-hidden border border-white/10 hover:border-white/20 transition-all duration-300 block';
            item.style.animationDelay = `${index * 0.1}s`;
           
            item.innerHTML = `
                <div class="item-image relative h-48 flex items-center justify-center overflow-hidden" style="background-color: ${project.color};">
                    <span class="text-6xl opacity-30">${project.icon}</span>
                    <div class="absolute top-4 right-4 backdrop-blur-sm px-3 py-1 rounded-full border border-white/20">
                        <span class="text-xs font-semibold text-white">${project.company}</span>
                    </div>
                </div>
                <div class="p-6">
                    <div class="flex items-center gap-2 mb-3">
                        <span class="inline-block px-3 py-1 bg-white/10 text-white text-xs font-bold rounded-full uppercase tracking-wide border border-white/20">
                            ${project.category}
                        </span>
                    </div>
                    <h3 class="text-xl font-bold text-white mb-2 line-clamp-2">
                        ${project.title}
                    </h3>
                    <p class="text-white/60 text-sm mb-4 line-clamp-2">
                        ${project.description}
                    </p>
                    <div class="flex items-center justify-between">
                        <div class="flex items-center text-[#EC4899] font-semibold text-sm">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                            </svg>
                            ${project.metrics}
                        </div>
                        ${project.url || project.link ? `
                        <div class="flex items-center text-white/60 text-xs">
                            <span>View</span>
                            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                            </svg>
                        </div>
                        ` : ''}
                    </div>
                </div>
            `;
           
            portfolioGrid.appendChild(item);
        });
    }
    // Setup event listeners
    function setupEventListeners() {
        // Filter buttons
        filterBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                // Remove active class from all buttons
                filterBtns.forEach(b => b.classList.remove('active'));
               
                // Add active class to clicked button
                btn.classList.add('active');
               
                currentFilter = btn.dataset.filter;
                console.log('üîÑ Filter changed to:', currentFilter);
                renderPortfolio();
            });
        });
       
        // Search input
        if (searchInput) {
            searchInput.addEventListener('input', (e) => {
                searchTerm = e.target.value;
                console.log('üîç Search term:', searchTerm);
                // Disable search when on case studies
                if (currentFilter !== 'casestudies') {
                    renderPortfolio();
                }
            });
        }
    }
    // Initialize app
    init();
</script>
