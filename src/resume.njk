    <script>
    document.getElementById("downloadResumeBtn").addEventListener("click", function () {
        // Select all the resume pages (both div.page elements)
        const resumePages = document.querySelectorAll(".page");
        // Create a container div to hold clone of pages for pdf generation
        const pdfContainer = document.createElement("div");
        pdfContainer.style.background = "#fff";
        // Clone each page and append to container so pdf captures styling and layout
        resumePages.forEach(page => {
            const clone = page.cloneNode(true);
            clone.style.pageBreakAfter = "always"; // ensure page break in PDF
            pdfContainer.appendChild(clone);
        });
        // Use html2pdf to generate PDF from container
        html2pdf()
          .set({
            margin: [10, 10, 10, 10],
            filename: 'Rakshit_Soral_Marketing_CV.pdf',
            image: { type: 'jpeg', quality: 0.98 },
            html2canvas: { scale: 2, letterRendering: true, logging: false },
            jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' }
          })
          .from(pdfContainer)
          .save();
    });
    </script>
